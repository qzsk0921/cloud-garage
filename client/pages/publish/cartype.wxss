/* pages/publish/cartype.wxss */
.container-area {
  background: #fff;
}

.input-box {
  padding: 20rpx 32rpx 40rpx;
  display: flex;
  align-items: center;
}

.input-box .btn-search {
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  width: 124rpx;
  height: 72rpx;
  line-height: 72rpx;
}

.container-inner {
  display: flex;
  flex-direction: row-reverse;
}

.list {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.item_letter {
  display: flex;
  background: #F5F6FA;
  height: 44rpx;
  padding-left: 40rpx;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.item_brand {
  display: flex;
  height: 100rpx;
  padding-left: 40rpx;
  align-items: center;
  border-bottom: 1rpx solid #E8E8E8;
  font-size: 30rpx;
  color: #666;
}

.item_brand:last-child {
  border-bottom: none;
}

.hotBrand-common {
  font-size: 26rpx;
  color: #9397A6;
  margin-left: 40rpx;
}

.hotBrand {
  padding-right: 50rpx;
  margin: auto;
}

.thishotText {
  font-size: 20rpx;
  color: #333333;
}

.letter {
  font-size: 20rpx;
  /* line-height: 34rpx; */
  color: #333333;
}

.slectBrand {
  border-color: #FEC240 !important;
}

.slectBrand view {
  color: #FEC240 !important;
}

