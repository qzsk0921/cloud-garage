/* pages/profile/profile.wxss */
.section1 {
  height: 384rpx;
}

.section1 .userInfo {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
}

.section1 .userInfo .avatar {
  margin-top: 138rpx;
  width: 140rpx;
  height: 140rpx;
  background: rgba(0, 0, 0, 0);
  border: 4rpx solid #FFFFFF;
  border-radius: 100px;
}

.section1 .userInfo>view {
  margin-top: 30rpx;
}

.section1 .userInfo>view text {
  font-size: 36rpx;
  color: #FFFFFF;
}

.section1 .userInfo .box-image {
  margin-left: 4rpx;
  display: inline-block;
  width: 42rpx;
  height: 42rpx;
  position: relative;
}

.section1 .userInfo .icon-badge {
  vertical-align: top;
}

.section1 .userInfo .box-image .tip {
  padding: 11rpx 0;
  visibility: hidden;
  opacity: 0;
  transition: all .2s;
  position: absolute;
  top: 68rpx;
  left: -341rpx;
  width: 517rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 42rpx;
  background: #333333;
  opacity: 0.86;
  border-radius: 10rpx;
}

.section1 .userInfo .box-image .tip:after {
  content: '';
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-bottom-color: #333333;
  position: absolute;
  left: 352rpx;
  top: -20rpx;
}

.section1 .userInfo .box-image .tip.show {
  visibility: visible;
  opacity: 1;
}

.section2>view {
  height: 102rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  position: relative;
}

.section2>view:after {
  position: absolute;
  right: 32rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid transparent;
  transform: rotate(45deg);
  border-top-color: #666666;
  border-right-color: #666666;
}

.section2 .icon {
  width: 40rpx;
  height: 40rpx;
}

.section2 .txt1 {
  margin-left: 36rpx;
  font-size: 30rpx;
  color: #333333;
}

.section2 .txt2 {
  margin-left: 289rpx;
  font-size: 26rpx;
  color: #888888;
}