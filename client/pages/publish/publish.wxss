} */

.form-item-proof {
  margin-top: 20rpx;
  padding: 30rpx 0 40rpx;
  background: #ffffff;
}

.form-item-proof .row1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 35rpx;
}

.form-item-proof .row1 .col1 {
  width: auto;
}

.form-item-proof .row1 .col1 text {
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 2rpx;
}

.form-item-proof .row1 .col2 {
  font-size: 26rpx;
  color: #C8C8C8;
  letter-spacing: 2rpx;
}

.form-item-proof .row2 {
  margin-top: 16rpx;
  font-size: 23rpx;
  padding-left: 35rpx;
  color: #BBBBBB;
  letter-spacing: 2rpx;
}

.form-item-proof .row3 {
  margin-top: 30rpx;
  padding-left: 35rpx;
}

.form-item-proof .row3 image {
  width: 155rpx !important;
  height: 155rpx !important;
  border: 1rpx solid #CECECE;
  border-radius: 10rpx;
}

.btn-box {
  position: fixed;
  bottom: 0;
  left: 0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  width: 100%;
  z-index: 2;
  background: #ffffff;
}

.btn-submit {
  width: 686rpx !important;
  height: 80rpx;
  background: #4A74F6;
  border-radius: 8rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}