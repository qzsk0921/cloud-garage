@import "../../../ocrsdk/pages/style.wxss";

.ocr-config{
  padding:40rpx 60rpx 100rpx 60rpx;
}

.ocr-config-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
}

.ocr-setting-btn{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 40px;
  height: 40px;
}

.ocr-config-item-title {
  display: flex;
  align-items: center;
}

.ocr-features-card{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ocr-features-card .col-text{
  box-sizing: border-box;
  padding-left: 0;
  padding-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
} 