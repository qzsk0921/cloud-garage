/* components/DropdownMenu/price.wxss */
.active {
  color: var(--primary-color);
}

.dropdown-item-down {
  transition: all .2s;
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  visibility: hidden;
}

.opened.dropdown-item-down {
  opacity: 1;
  visibility: visible;
}

.mask {
  transition: all .2s;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(51, 51, 51, .5);
}

.dropdown-item-down__content {
  text-align: left;
  transition: all .2s;
  background: #F8F8F8;
  font-size: 28rpx;
  line-height: 64rpx;
  color: #383D46;
  position: absolute;
  width: 100%;
  bottom: 100%;
  left: 0;
  text-align: center;
}

.opened .dropdown-item-down__content {
  /* transform: translateY(676rpx); */
}

.dropdown-item-down__content .section1 {
  padding: 30rpx 32rpx 10rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  background: #FFFFFF;
}

.dropdown-item-down__content .section1 .item {
  width: 215rpx;
  height: 74rpx;
  line-height: 74rpx;
  border-radius: 8rpx;
  color: #4F4F4F;
  background: #F7F8FC;
  border: 1rpx solid transparent;
}

.dropdown-item-down__content .section1 .item.active {
  background: rgba(74, 116, 246, 0.12);
  border-color: var(--primary-color);
  color: var(--primary-color);
}

.dropdown-item-down__content .section1 .item:not(:nth-of-type(3n)) {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.dropdown-item-down__content .section2 {
  border-top: 20rpx solid #F8F8F8;
  padding: 0 32rpx 40rpx;
  background: #FFFFFF;
  /* border: 1px solid transparent; */
}

.dropdown-item-down__content .section2 .tit {
  margin-top: 30rpx;
  text-align: left;
  line-height: 1;
}

.dropdown-item-down__content .section2 .tit text:nth-of-type(1) {
  font-size: 30rpx;
  font-weight: 500;
  color: #4F4F4F;
}

.dropdown-item-down__content .section2 .tit text:nth-of-type(2) {
  font-size: 24rpx;
  color: #999999;
}

.dropdown-item-down__content .section2 .customprice-box {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dropdown-item-down__content .section2 .input-price {
  width: 303rpx;
  height: 74rpx;
  background: #F7F8FC;
  border-radius: 8rpx;
}

.dropdown-item-down__content .section2 .strikethrough {
  margin: 0 25rpx;
  width: 30rpx;
  height: 4rpx;
  background: #CCCFDB;
}

.dropdown-item-down__content .section2 .btn-submit {
  margin-top: 40rpx;
  width: 686rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: var(--primary-color);
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}