/* components/DropdownMenu/shareSheet.wxss */
.dropdown-item-down {
  transition: all .2s;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  visibility: hidden;
  z-index: 1;
}

.opened.dropdown-item-down {
  opacity: 1;
  visibility: visible;
}

.mask {
  transition: all .2s;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(51, 51, 51, .5);
}

.dropdown-item-down__content {
  width: 100%;
  text-align: center;
  transition: all .2s;
  position: absolute;
  left: 0;
  top: 100%;
  background: #F2F3F6;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  overflow: hidden;
}

.dropdown-item-down__content .l {
  background: #fff;
}

.dropdown-item-down__content .l1 {
  height: 236rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dropdown-item-down__content .l1 .share-sheet__option:not(:first-child) {
  margin-left: 244rpx;
}

.dropdown-item-down__content .l1 .share-sheet__icon {
  width: 100rpx;
  height: 100rpx;
}

.dropdown-item-down__content .l1 .share-sheet__name {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333333;
}

.dropdown-item-down__content .l2 {
  margin-top: 10rpx;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 34rpx;
  color: #999999;
}