  color: #999999
}

.tree-select__item .price .section .customprice-box {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tree-select__item .price .section .input-price {
  text-align: center;
  width: 228rpx;
  height: 74rpx;
  background: #F7F8FC;
  border-radius: 8rpx;
}

.tree-select__item .price .section .input-placeholder {
