}

.l9 {
  margin-top: 62rpx;
  text-align: center;
  height: 86rpx;
  background: var(--primary-color);
  font-size: 30rpx;
  line-height: 86rpx;
  color: #FFFFFF;
}

.qr {
  position: absolute;
  top: 667rpx;
  right: 32rpx;
}

.qr image {
  width: 173rpx;
  height: 172rpx;
  background: rgba(0, 0, 0, 0);
}

.qr view {
  margin-top: 14rpx;
  font-size: 20rpx;
  color: #333333;
  text-align: center;
  letter-spacing: 3rpx;
}

.dialog-wrapper {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 101;
  background-color: rgba(0, 0, 0, 0.5);
}

.dialog-wrapper.poster-dialog {
  z-index: -1;
  display: none;
}

.dialog-wrapper.poster-dialog.active {
  top: 0;
  left: 0;
  z-index: 10;
  display: block;
}

.dialog-wrapper.poster-dialog.disappear {
  animation: animateDisappear 1s forwards;
}

@keyframes animateDisappear {
  0% {
    transform: translate(0, 0) scale(1, 1);
  }

  40% {
    transform: translate(100px, 100px) scale(0.3, 0.3);
  }

  100% {
    transform: translate(300px, 600px) scale(0, 0);
  }
}

.poster-box {
  margin: 156rpx auto 0;
  width: 591rpx;
  height: 936rpx;
  /* max-height: calc(100vh - 340rpx); */
  /*height: calc(100vh - 300rpx);*/
  position: relative;
  overflow: auto;
}

