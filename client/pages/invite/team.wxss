/* pages/invite/team.wxss */
.container-invite-team {
  background: #ffffff;
}

.content {
  overflow: auto;
}

.icon-bg {
  width: 100vw;
  height: 100%;
}

.absolute-box {
  position: absolute;
  bottom: calc(60rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  background: #FFFFFF;
  width: 670rpx;
  box-shadow: 0rpx 0rpx 20rpx rgba(0, 0, 0, 0.07);
  border-radius: 14rpx;
  padding-bottom: 44rpx;
}

.absolute-box .row1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 34rpx;
  border-bottom: 4rpx solid #EEEEEE;
}

.absolute-box .row1 .left {}

.absolute-box .row1 .left .avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}

.absolute-box .row1 .left text {
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.absolute-box .row1 .right view {
  text-align: center;
  width: 125rpx;
  height: 54rpx;
  background: linear-gradient(88deg, #FFDDBA 0%, #FFC38F 100%);
  border-radius: 46rpx;
  font-size: 24rpx;
  line-height: 54rpx;
  color: #A54704;
}

.row2 {
  text-align: center;
}

.row2 .tit {
  padding-top: 44rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.input-box {
  margin: 40rpx auto 0;
  width: 602rpx;
  height: 88rpx;
  background: #F8F8F8;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}

.input-box .icon {
  width: 88rpx;
  height: 88rpx;
}

.input-box input {
  text-align: left;
  width: 366rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.input-box .placeholder-input {
  font-size: 30rpx;
  color: #AAAAAA;
}

.input-box .placeholder-input-hidden {
  visibility: hidden;
  opacity: 0;
  color: transparent;
}

.input-box .btn-quick {
  width: 136rpx;
  height: 64rpx;
  background: #596FF9;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 64rpx;
  color: #FFFFFF;
  margin: 0;
}

.row3 {
  margin-top: 40rpx;
}

.row3 .btn-join {
  margin: 0 auto;
  text-align: center;
  width: 602rpx;
  height: 92rpx;
  border-radius: 10rpx;
  background: #596FF9;
  font-size: 30rpx;
  color: #FFFFFF;
  line-height: 92rpx;
}