/* pages/screen/screen.wxss */
.container-screen {
  background: #FFFFFF;
}

.tree-select {
  display: flex;
}

.tree-select__nav {
  width: 176rpx;
  background: #F6F8FB;
}

.tree-select__nav .tree-select__nav-item {
  text-align: center;
  height: 100rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 100rpx;
  color: #333333;
}

.tree-select__content {
  width: calc(100vw - 176rpx);
}

.tree-select__item {
  padding: 40rpx 32rpx 20rpx;
}

.tree-select__item .l1 {
  position: relative;
}

.tree-select__item .l1.arrow:after {
  position: absolute;
  right: 32rpx;
  top: 50%;
  content: '';
  width: 12rpx;
  height: 12rpx;
  border: 3rpx solid transparent;
  border-top-color: #999999;
  border-right-color: #999999;
  transform: rotate(45deg) translateY(-50%);
}

.tree-select__item .l1 .tit {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.tree-select__item .l1 .tit text:nth-of-type(n+2) {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999999;
}

.tree-select__item .l2 {
  margin-top: 30rpx;
}

.tree-select__item .l2>view {
  display: flex;
  flex-wrap: wrap;
}

.tree-select__item .l2 .item-btn {
  text-align: center;
  width: 158rpx;
  height: 74rpx;
  line-height: 74rpx;
  background: #F7F8FC;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #333333;
}

.tree-select__item .l2 .item-btn:not(:nth-of-type(3n)) {
  margin-right: 18rpx;
}

.tree-select__item .l2 .item-btn:not(:nth-of-type(-n+3)) {
  margin-top: 20rpx;
}

/* slider */
.sliderHCon {
  height: 250rpx;
  width: 100%;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.MoneyValue {
  font-size: 22rpx;
  text-align: center;
  color: #666;
  margin-top: 15rpx;
}

.showMoney {
  display: flex;
  justify-content: space-between;
  width: 68%;
  margin-top: -34px;
  position: absolute;
  color: #666;
  font-size: 22rpx;
}

.showMoney text {
  margin-right: -67rpx;
}

.twoSlider {
  width: 93%;
  height: 100px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
}

.twoSlider .leftSliderPrice {
  position: absolute;
  top: -34rpx;
  left: 0;
  width: 100rpx;
  height: 60rpx;
  line-height: 40rpx;
  padding: 20rpx;
  text-align: center;
  color: #FFF;
}

.sliderPrice view {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  font-size: 22rpx;
}

.twoSlider .rightSliderPrice {
  position: absolute;
  top: -34rpx;
  right: 0;
  width: 100rpx;
  height: 60rpx;
  line-height: 40rpx;
  padding: 20rpx;
  text-align: center;
  color: #FFF;
}

.sliderView {
  border: solid red 1rpx;
  color: red;
}

/* 价格 */
.tree-select__item .price .section {}

.tree-select__item .price .section .tit {
  margin-top: 24rpx;
  text-align: left;
  line-height: 1;
}

.tree-select__item .price .section .tit text:nth-of-type(1) {
  font-size: 24rpx;
  color: #333333;
}

.tree-select__item .price .section .tit text:nth-of-type(2) {
  font-size: 24rpx;
  color: #999999
}

.tree-select__item .price .section .customprice-box {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tree-select__item .price .section .input-price {
  text-align: center;
  width: 228rpx;
  height: 74rpx;
  background: #F7F8FC;
  border-radius: 8rpx;
}

.tree-select__item .price .section .input-placeholder {
  font-size: 24rpx;
  color: #B5B8C4;
}

.input-placeholder {
  font-size: 24rpx;
  color: #B5B8C4;
}

.tree-select__item .price .section .strikethrough {
  margin: 0 12rpx;
  width: 30rpx;
  height: 3rpx;
  background: #D6D6D6;
}

/* 滑动样式 */
.select-construct {
  width: 100%;
}

.select-area {
  width: 80%;
  padding: 30px 10% 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.slider-container {
  width: 100%;
  display: flex;
  padding: 20px 0 10px;
  position: relative;
}

.slider-left,
.slider-right {
  margin-right: -8rpx;
}