/* components/DropdownMenu/helpSell.wxss */
.dropdown-item-down {
  transition: all .2s;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  visibility: hidden;
  z-index: 1;
}

.opened.dropdown-item-down {
  opacity: 1;
  visibility: visible;
}

.mask {
  transition: all .2s;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(51, 51, 51, .5);
}

.dropdown-item-down__content {
  width: 100%;
  text-align: center;
  transition: all .2s;
  position: absolute;
  left: 0;
  top: 100%;
  background: #ffffff;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  overflow: hidden;
}

.dropdown-item-down__content .l1 {
  height: 70rpx;
  background: #E2E9FF;
  line-height: 70rpx;
  color: #4A74F6;
  font-size: 26rpx;
}

.dropdown-item-down__content .l2 {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-top: 42rpx;
}

.dropdown-item-down__content .l3 {
  margin: 42rpx 32rpx 0;
  position: relative;
  background: #F7F8FC;
  border-radius: 8rpx;
  display: flex;
  width: 686rpx;
}

.dropdown-item-down__content .l3 .icon {
  width: 76rpx;
  height: 88rpx;
}

.dropdown-item-down__content .l3 input {
  text-align: left;
  padding-left: 10rpx;
  width: 454rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.dropdown-item-down__content .l3 .placeholder-input {
  font-size: 30rpx;
  color: #969AAA;
}

.dropdown-item-down__content .l3 .btn-quick {
  width: 142rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #04AE0A;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  position: absolute;
  right: 14rpx;
  top: 14rpx;
}

.dropdown-item-down__content .l4 {
  width: 686rpx;
  height: 86prx;
  background: var(--primary-color);
  border-radius: 8rpx;
  font-size: 30rpx;
  line-height: 86rpx;
  color: #FFFFFF;
  margin: 40rpx auto;
}