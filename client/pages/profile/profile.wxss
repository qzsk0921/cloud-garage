/* pages/profile/profile.wxss */
.section1 {
  height: calc(364rpx + env(safe-area-inset-bottom));
  position: relative;
  z-index: 1;
}

.section1 .userInfo {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: calc(148rpx + env(safe-area-inset-bottom)) 0 0 40rpx;
  display: flex;
  align-items: center;
}

.section1 .userInfo .avatar {
  width: 110rpx;
  height: 110rpx;
  background: rgba(0, 0, 0, 0);
  border: 4rpx solid #FFFFFF;
  border-radius: 100px;
  margin-right: 24rpx;
}

.userInfo .login-text {
  display: flex;
  background: transparent;
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin: 0;
}

.section1 .userInfo .box-image {
  margin-left: 12rpx;
  position: relative;
}

.section1 .userInfo .icon-badge,
.section1 .userInfo .icon-vip {
  display: inline-block;
  width: 42rpx;
  height: 42rpx;
}

.section1 .vip-box {
  position: absolute;
  top: calc(310rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  width: 670rpx;
  height: 104rpx;
}

.section1 .vip-box .txt {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size: 26rpx;
  font-weight: 500;
  color: #715531;
}

.section1 .vip-box .txt {
  margin-right: 51rpx;
}

.section1 .vip-box::after {
  right: 28rpx;
  top: 44rpx;
  position: absolute;
  content: '';
  width: 14rpx;
  height: 14rpx;
  border: 2rpx solid transparent;
  transform: rotate(45deg);
  border-top-color: #715531;
  border-right-color: #715531;
}

.section1 .vip-box .bg-vip {
  width: 100%;
  height: 100%;
}

