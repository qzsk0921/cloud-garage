.sec2 {
  padding-left: 40rpx;
}

.sec2 .l1 {
  margin-top: 124rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.sec2 .l2 .privileges {
  padding-top: 26rpx;
  display: flex;
  flex-wrap: wrap;
}

.sec2 .l2 .privileges .item {
  width: 328rpx;
  height: 112rpx;
  background: #F7F7F7;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  margin: 14rpx 14rpx 0 0;
}

.sec2 .l2 .privileges .item image {
  width: 64rpx;
  height: 64rpx;
}

.sec2 .l2 .privileges .item text {
  margin-left: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.sec3 {
  position: absolute;
  bottom: calc(60rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
}

.sec3 .btn-submit {
  text-align: center;
  width: 670rpx;
  height: 100rpx;
  background: linear-gradient(271deg, #2C2626 0%, #7E7A74 100%);
  box-shadow: 0rpx 8rpx 16rpx rgba(0, 0, 0, 0.1600);
  border-radius: 10rpx;
  font-size: 34rpx;
  font-weight: 500;
  line-height: 100rpx;
  color: #FFE8CB;
}