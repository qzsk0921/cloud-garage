.section2 {
  padding-top: 53rpx;
  overflow: auto;
}

.section2>view {
  height: 102rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  position: relative;
}

.section2>view:after {
  position: absolute;
  right: 32rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid transparent;
  transform: rotate(45deg);
  border-top-color: #666666;
  border-right-color: #666666;
}

.section2 .icon {
  width: 40rpx;
  height: 40rpx;
}

.section2 .txt1 {
  margin-left: 36rpx;
  font-size: 30rpx;
  color: #333333;
}

